{
  "compilerOptions": {
    /* Runtime */
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",

    /* Project Structure */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Module Resolution */
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    /* Strictness */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,

    /* Interop */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* Quality */
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* Dev Experience */
    "sourceMap": true,
    "incremental": true,

    /* Types */
    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
